<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xudri.cloudrenderserver.dao.InstanceDao">

    <resultMap type="com.xudri.cloudrenderserver.entity.Instance" id="InstanceMap">
        <result property="id" column="ID" jdbcType="VARCHAR"/>
        <result property="projectid" column="ProjectID" jdbcType="VARCHAR"/>
        <result property="renderconfig" column="RenderConfig" jdbcType="VARCHAR"/>
        <result property="state" column="State" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into main.instance(ProjectIDRenderConfigState)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.projectid}#{entity.renderconfig}#{entity.state})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into main.instance(ProjectIDRenderConfigState)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.projectid}#{entity.renderconfig}#{entity.state})
        </foreach>
        on duplicate key update
        ProjectID = values(ProjectID) RenderConfig = values(RenderConfig) State = values(State)
    </insert>

</mapper>

