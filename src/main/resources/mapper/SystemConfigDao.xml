<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xudri.cloudrenderserver.infrastructure.repository.SystemConfigDao">

    <resultMap type="com.xudri.cloudrenderserver.domain.entity.SystemConfig" id="SystemConfigMap">
        <result property="signallingserverport" column="SignallingServerPort" jdbcType="VARCHAR"/>
        <result property="renderclientpath" column="RenderClientPath" jdbcType="VARCHAR"/>
        <result property="maximuminstancecount" column="MaximumInstanceCount" jdbcType="INTEGER"/>
        <result property="coturnserverport" column="CoturnServerPort" jdbcType="VARCHAR"/>
        <result property="filesavepath" column="FileSavePath" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into main.system_config(SignallingServerPortRenderClientPathMaximumInstanceCountCoturnServerPortFileSavePath)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.signallingserverport}#{entity.renderclientpath}#{entity.maximuminstancecount}#{entity.coturnserverport}#{entity.filesavepath})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into main.system_config(SignallingServerPortRenderClientPathMaximumInstanceCountCoturnServerPortFileSavePath)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.signallingserverport}#{entity.renderclientpath}#{entity.maximuminstancecount}#{entity.coturnserverport}#{entity.filesavepath})
        </foreach>
        on duplicate key update
        SignallingServerPort = values(SignallingServerPort) RenderClientPath = values(RenderClientPath) MaximumInstanceCount =
        values(MaximumInstanceCount) CoturnServerPort = values(CoturnServerPort) FileSavePath = values(FileSavePath)
    </insert>

</mapper>

